<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtIdUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idUsuario"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombreUsuario"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/txtIdUsuario"
        android:layout_alignLeft="@+id/txtIdUsuario"
        android:layout_alignStart="@+id/txtIdUsuario" />

    <TextView
        android:id="@+id/txtCorreoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correoUsuario"
        android:layout_below="@+id/txtNombreUsuario"
        android:layout_alignLeft="@+id/txtNombreUsuario"
        android:layout_alignStart="@+id/txtNombreUsuario"
        android:layout_marginTop="41dp" />

</RelativeLayout>